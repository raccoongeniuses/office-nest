<!DOCTYPE html>
<html class="light">

<head>
    <meta charset="utf-8" />
    <title>Dashboard - Office Nest</title>
    <link href="/css/styles.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body
    class="bg-stone-50 dark:bg-nest-900 min-h-screen font-mono text-stone-900 dark:text-vibe-100 transition-colors duration-300">
    <nav class="bg-white dark:bg-nest-800 border-b-2 border-stone-800 dark:border-stone-700 p-4 mb-6 transition-colors duration-300">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold uppercase tracking-wide dark:text-vibe-500">Office Nest</h1>
            <div class="flex items-center gap-4">
                <span class="text-sm font-bold dark:text-vibe-200">{{user.email}}</span>
                <a href="/auth/logout" class="text-sm text-red-600 font-bold hover:underline">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-4">
        <!-- Gamification Stats -->
        <div class="col-span-1 md:col-span-2 bg-white dark:bg-nest-800 p-4 border-2 border-stone-800 dark:border-stone-700 rounded-sm shadow-[4px_4px_0px_0px_rgba(41,37,36,1)] mb-6">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h2 class="text-2xl font-bold uppercase dark:text-vibe-yellow">Level {{user.level}}</h2>
                    <p class="text-stone-600 dark:text-vibe-300">XP: {{user.xp}} / {{nextLevelXp}}</p>
                </div>
                <div class="text-right">
                    <div class="text-sm font-bold text-stone-500 dark:text-vibe-400">Streak</div>
                    <div class="text-2xl font-bold dark:text-vibe-orange">{{user.currentStreak}} Days ðŸ”¥</div>
                </div>
            </div>
            
            <!-- Progress Bar -->
            <div class="w-full bg-stone-200 dark:bg-stone-700 h-4 border-2 border-stone-800 dark:border-stone-600 rounded-full overflow-hidden">
                <div class="bg-indigo-600 dark:bg-vibe-purple h-full" style="width: {{xpProgress}}%"></div>
            </div>

            <!-- Badges -->
            <div class="mt-4 flex gap-2 flex-wrap items-center">
                {{#each user.badges}}
                    <span class="inline-flex items-center px-2 py-1 rounded-sm border border-stone-800 bg-yellow-200 text-xs font-bold" title="{{this.badge.description}}">
                        {{this.badge.name}}
                    </span>
                {{/each}}
                <a href="/attendance/leaderboard" class="ml-auto text-xs font-bold text-indigo-600 dark:text-vibe-cyan hover:underline">View Leaderboard -></a>
            </div>

            <!-- Attendance Actions -->
            <div class="mt-6 flex gap-4">
                {{#if isCheckedIn}}
                    {{#if isCheckedOut}}
                        <button disabled class="bg-stone-300 text-stone-600 px-6 py-2 font-bold border-2 border-stone-500 cursor-not-allowed">
                            Day Complete
                        </button>
                    {{else}}
                        <button onclick="checkOut()" class="bg-yellow-400 text-stone-900 px-6 py-2 font-bold border-2 border-stone-800 hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all">
                            Check Out
                        </button>
                    {{/if}}
                {{else}}
                    <button onclick="checkIn()" class="bg-green-500 text-stone-900 px-6 py-2 font-bold border-2 border-stone-800 hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all">
                        Check In
                    </button>
                {{/if}}
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <!-- Leave Management Card -->
            <a href="/leave"
                class="block bg-white dark:bg-nest-800 p-4 border-2 border-stone-800 dark:border-stone-700 rounded-sm shadow-[4px_4px_0px_0px_rgba(41,37,36,1)] dark:shadow-[4px_4px_0px_0px_rgba(28,25,23,1)] hover:animate-shake hover:shadow-[6px_6px_0px_0px_rgba(41,37,36,1)] dark:hover:shadow-[6px_6px_0px_0px_rgba(28,25,23,1)] transition-all group">
                <div class="flex items-center gap-3 mb-4">
                    <i data-lucide="calendar"
                        class="w-6 h-6 text-indigo-600 dark:text-vibe-cyan group-hover:scale-110 transition-transform"></i>
                    <h2 class="text-xl font-bold uppercase dark:text-vibe-cyan">Leave Management</h2>
                </div>
                <p class="mb-0 text-stone-600 dark:text-vibe-300">View your leave balance and submit new requests.</p>
            </a>

            <!-- Reimbursement Card -->
            <a href="/reimbursement"
                class="block bg-white dark:bg-nest-800 p-4 border-2 border-stone-800 dark:border-stone-700 rounded-sm shadow-[4px_4px_0px_0px_rgba(41,37,36,1)] dark:shadow-[4px_4px_0px_0px_rgba(28,25,23,1)] hover:animate-shake hover:shadow-[6px_6px_0px_0px_rgba(41,37,36,1)] dark:hover:shadow-[6px_6px_0px_0px_rgba(28,25,23,1)] transition-all group">
                <div class="flex items-center gap-3 mb-4">
                    <i data-lucide="receipt"
                        class="w-6 h-6 text-indigo-600 dark:text-vibe-pink group-hover:scale-110 transition-transform"></i>
                    <h2 class="text-xl font-bold uppercase dark:text-vibe-pink">Reimbursements</h2>
                </div>
                <p class="mb-0 text-stone-600 dark:text-vibe-300">Submit expense claims and track approval status.</p>
            </a>
        </div>
    </main>
    <script>
        lucide.createIcons();

        async function checkIn() {
            try {
                const res = await fetch('/attendance/check-in', { method: 'POST' });
                if (res.ok) {
                    window.location.reload();
                } else {
                    const data = await res.json();
                    alert(data.message || 'Error checking in');
                }
            } catch (e) {
                alert('Error checking in');
            }
        }

        async function checkOut() {
            try {
                const res = await fetch('/attendance/check-out', { method: 'POST' });
                if (res.ok) {
                    window.location.reload();
                } else {
                    const data = await res.json();
                    alert(data.message || 'Error checking out');
                }
            } catch (e) {
                alert('Error checking out');
            }
        }
    </script>
</body>

</html>